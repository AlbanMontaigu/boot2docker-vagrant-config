
# ============================================================
# Docker compose custom commands
# ============================================================


# ------------------------------------------------------------
# Custom env variables
# ------------------------------------------------------------
export COMPOSE_PROJECT_NAME="app"


# ------------------------------------------------------------
# Change compose app prefix
# ------------------------------------------------------------
dc_prefix(){

    if [ $# -eq 0 ]; then
        echo $COMPOSE_PROJECT_NAME
    else
        export COMPOSE_PROJECT_NAME=$1
    fi
}
alias dc-prefix="dc_prefix"
