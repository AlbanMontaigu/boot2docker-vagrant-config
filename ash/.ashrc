

# -------------------------------------------------------------------
# Parametrization (for all environment)
# -------------------------------------------------------------------

# Misc
export VAGRANT_B2D_EXTENSION_VERSION="1.10.3"
export BOOT2DOCKER_EXTENSION_DIR="/var/lib/boot2docker/extension"
export HOME_DOCKER_USER="/home/docker"

# Docker toolbox
export DKTB_VERSION=$VAGRANT_B2D_EXTENSION_VERSION
export DKTB_EXTENSION_STATUS="OFF"
export DKTB_EXTENSION_REPO="https://github.com/AlbanMontaigu/docker-toolbox-extension.git"
export DKTB_EXTENSION_VERSION=$DKTB_VERSION

# Compose
export COMPOSE_PROJECT_NAME="app"


# ------------------------------------------------------------
# Import custom elements in a dynamic way
#
# NOTE: prefix the files with a number to manage order
# ------------------------------------------------------------
for ashrc_file in $BOOT2DOCKER_EXTENSION_DIR/ash/.ashrc.d/* ; do
    if [ -f $ashrc_file ]; then 
        source $ashrc_file
    fi
done
